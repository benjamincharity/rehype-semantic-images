{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "esModuleInterop": true,
    "lib": ["ESNext"],
    "module": "nodeNext",
    "moduleResolution": "nodeNext",
    "outDir": "dist",
    "target": "ESNext",
    "types": ["node"],
    "forceConsistentCasingInFileNames": true,
    "strict": true,
  },
  "include": ["src"],
}
